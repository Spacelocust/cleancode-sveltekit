{
  "name": "cleancode-sveltekit",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "biome lint ./src",
    "format": "biome check --apply ./src",
    "db:migrate": "bun --bun run ./src/lib/server/drizzle/migrate.ts",
    "db:drop": "bun --bun run ./src/lib/server/drizzle/drop.ts",
    "db:create": "bun --bun run ./src/lib/server/drizzle/create.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@playwright/test": "^1.41.2",
    "@sveltejs/kit": "^2.5.0",
    "@types/node": "^20.11.19",
    "autoprefixer": "^10.4.17",
    "drizzle-kit": "^0.20.14",
    "lucia": "^3.0.1",
    "postcss": "^8.4.35",
    "postcss-load-config": "^5.0.3",
    "svelte": "^4.2.11",
    "svelte-adapter-bun": "^0.5.1",
    "svelte-check": "^3.6.4",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.1.3"
  },
  "type": "module",
  "dependencies": {
    "@lucia-auth/adapter-drizzle": "^1.0.2",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.29.3",
    "mysql2": "^3.9.1",
    "oslo": "^1.1.2",
    "radix-icons-svelte": "^1.2.1",
    "tailwind-merge": "^2.2.1",
    "tailwind-variants": "^0.2.0",
    "valibot": "^0.28.1"
  }
}
